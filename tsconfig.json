{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["ES2022"],
    "rootDir": "./src",
    "outDir": "dist",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "strict": false,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
  },
  "include": ["src/**/*"],
  "exclude": ["**/node_modules/*", "dist"]
}
